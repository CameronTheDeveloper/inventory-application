extends layout 

block content 
    h1=title 

    form(method='post')
        label(for='category_name') Category name: 
        input#category_name(type='text', placeholder='Category name', required value=(undefined===category ? '' : category.name))
        abel(for='category_desc') Description: 
        input#category_desc(type='text', placeholder='Description', required value=(undefined===category ? '' : category.description))
        button(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
